pipeline {
    agent any

    tools {
        // Go to Manage Jenkins -> Global Tool Configuration to set them up
        gradle 'gradle'
        jdk 'JDK_17'
    }

    stages {
        stage('Checkout Source') {
            steps {
                git url: 'https://github.com/leeeyo/auth-lib.git',
                    branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh './gradlew clean build -x test'
            }
        }

        stage('Run Unit Tests') {
            steps {
                sh './gradlew test -PskipIntegrationTests=true'
            }
            post {
                always {
                    junit 'build/test-results/test/*.xml'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh './gradlew sonar'
                }
            }
        }
        stage('Package') {
            steps {
                sh './gradlew assemble'
            }
        }
        stage('Packaging') {
            steps {
                sh './gradlew distZip'
                archiveArtifacts artifacts: 'build/distributions/*.zip', fingerprint: true
            }
        }
    }
    
    post {
        always {
            echo "Pipeline finished with status: ${currentBuild.result}"
        }
    }
}
